#! /usr/bin/env ruby1.9.1

require 'optparse'
require 'open3'


def parse_args()
	options = {}
	OptionParser.new do |opts|
		opts.banner = 'Usage: accert testfile [file]'
	end.parse!

	return options, ARGV
end

def fetch_tests(file)
	return `#{file}`.split("\n")
end

def filter_tests(tests, filter)
	if filter.nil?
		return tests
	end
	selection = []
	tests.each do |t|
		if /#{filter}/ =~ t
			selection << t
		end
	end
	return selection
end

def run_test(file, test)
	stdout, stderr, status = Open3.capture3(file, test)
	result = status.exitstatus
	if result == 0
		print '.'
	elsif result == 1
		print 'F'
	else
		print 'E'
	end
	return result == 0
end

def run_tests(file, tests)
	success = true
	tests.each do |t|
		success = run_test(file, t) and success
	end
	print "\n"
	return success
end

def main()
	opts, args = parse_args()
	if args.length < 1
		print "too few arguments\n"
		return -1
	end
	cmd = args[0]
	filter = nil
	if args.length == 2
		filter = args[1]
	end

	tests = fetch_tests(cmd)
	selection = filter_tests(tests, filter)
	success = run_tests(cmd, selection)
	return success
end

exit main()
